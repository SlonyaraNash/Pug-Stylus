mixin CreateGallery(listImages, name)
    div.images
        each pict in listImages
            a(href= name)
                img.images__img(src= require("./images/" + pict))

mixin CreateArticle(listSections)
    div.article
        each item in listSections
            section
                h3.article__h3= item.header
                p.article__p= item.text

