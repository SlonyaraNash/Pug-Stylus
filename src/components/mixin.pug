mixin CreateMenu(dictMenu, title, active)
    strong= title
    div.menu
        each value, key in dictMenu
            if active == key
                a.menu__a_active(href=value)= key
            else
                a.menu__a(href=value)= key

//mixin CreateMenu(dictMenu, title)
    strong= title
    div.menu
        each value, key in dictMenu
